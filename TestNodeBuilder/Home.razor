@inject IServiceProvider sp

<div class="p-3">

    <h1>Hello, world!</h1>

    <button class="btn btn-primary" @onclick="@TimeTravel">Time travel</button>

    <button class="btn btn-outline-secondary" @onclick="@TimeTravel2">Time travel 2</button>

</div>

@code {
    [Parameter]
    public HomeForm Form { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);

        if (firstRender)
        {
            Form.Opacity = 1.0;
        }
    }

    private void TimeTravel()
    {
        var nextForm = sp.GetRequiredService<Form2>();
        nextForm.ShowDialogSynchronized();
    }

    private void TimeTravel2()
    {
        var nextForm = sp.GetRequiredService<Form3>();
        nextForm.ShowDialogSynchronized();
    }
}
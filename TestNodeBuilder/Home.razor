@inject IServiceProvider sp

<div class="p-3">

    <h1>Hello, world!</h1>

    <button class="btn btn-primary" @onclick="@TimeTravel">Time travel</button>

</div>

@code {
    [Parameter]
    public HomeForm? Form { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);

        if (firstRender)
        {
            Form!.Opacity = 1.0;
        }
    }

    private async Task TimeTravel()
    {
        var nextForm = sp.GetRequiredService<EditTokenForm>();
        var token = await nextForm.ShowEditTokenForm("test", (_) => "Nope!");
    }
}